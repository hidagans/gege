#!/bin/bash

# Install URNetwork provider
curl -fSsL https://raw.githubusercontent.com/urnetwork/connect/refs/heads/main/scripts/Provider_Install_Linux.sh | sh

# Reload shell config
source ~/.bashrc

# Buat folder dan simpan JWT
mkdir -p /root/.urnetwork
printf '%s' 'eyJhbGciOiJSUzUxMiIsInR5cCI6IkpXVCJ9..bs5JN_KLfNMBJbL6xDsxit-I8lY6anCwQP3EhEZgWpq_GPUPij1GJQ9KOxDg37TXIweR1wTu9IRgZEbPB3-w3OOXdqx_GrJUN0Gjppo78mLdqfxwoogUPgdE8Mlor4qPqdFpsL45cNLYTpdyboix189uJDjneIdp0We0pDi_dMWJktO9hDZSPDVCi4fLC-QNnlIlblTR1jj5nNGRK4V5cy8vcLUmZBZ8qEShRlY8g5Ht_fhpZR93d5_a3qyiV2rYtnTnEVzpoOZVTKrnqpkT6Ipe35e0DJitytzVZ6HAalD7cWo2C0ZF93qhlEinIFCT8RSIYKmJK7K3H5r79kfliiw92Gl9-llXM2rSMzGEoJ1wiQJ-u4459tLtD-OamAYAB4pEcG8sjMMMWy27fO15zOVa2zxL1-aO-2ec3qV_3QDLhQU_qwDbmk4NIFHLq9RIG_95pwBU7eFqP_b8AqL9U33MCUnYOvyP0jgz19N3LnFrSyVVhUpBtS0u-6ZBDUk7Rk0rPCvg9sJr9ersMjVpmpMlPosjfITKn5bvvQS6FX4Qxo_u7QtbG6sYSq3w2Mf6CEEvPETakCOZaonBiPmWd7unjtyh2vNKx227mtlPz1u71mzDaPpxis9QaS-WNj5K6zcgCJwdO-FRzhliEsiBDOowQ7fir0OCcBX1Sl-VqXo' > /root/.urnetwork/jwt
